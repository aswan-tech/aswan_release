document.observe('dom:loaded', function(){iCart.updateLinks()});
try {
    if (/MSIE (\d+\.\d+);/.test(navigator.userAgent)) { //ie8 fix
        var ieVersion = new Number(RegExp.$1)
        if (ieVersion >= 8) {
            iCart.updateLinks()
        }
    }
} catch (err) {}
//]]>
</script>

<div class="block block-subscribe">
    <div class="block-title">
        <strong><span><?php echo $this->__('Newsletter') ?></span></strong>
    </div>
    <form action="<?php echo $this->getFormActionUrl() ?>" method="post" id="newsletter-validate-detail">
        <div class="block-content">
            <label for="newsletter"><?php echo $this->__('Sign up for our newsletter:') ?></label>

<?php if( $this->hasGroups() ): ?>

        <?php
            $_groups       = $this->getGroups();
            $_groupsCount  = count( $_groups );
            $_counter = 0;
        ?>
        <?php foreach ($_groups as $_group): $_id = $_group->getId(); $_counter++; ?>
            <?php
                // Do not display sub groups at this level
                if ( $_group->getParentGroupId() > 0 ) :
                        continue;
                endif;
            ?>
                <div class="input-box">

                    <?php if ( $_group->getSubGroups() ): ?>
                        <?php foreach ( $_group->getSubGroups() as $_child ): $_counter++; ?>
                            <input id="nl_group_<?php echo $_child->getId() ?>" value="<?php echo $_child->getId() ?>" type="radio" name="group[]" title="<?php echo $this->htmlEscape($_child->getGroupName()) ?>" <?php if ($_counter == $_groupsCount) : ?>class="validate-one-required-by-name"<?php endif;?> />
                            <label for="nl_group_<?php echo $_child->getId() ?>"><?php echo $_child->getGroupName() ?></label>
                        <?php endforeach; ?>

                    <?php else: ?>
                        <?php if ($_groupsCount > 1): ?>
                        <input id="nl_group_<?php echo $_id ?>" value="<?php echo $_id ?>" type="checkbox" name="group[]" title="<?php echo $this->htmlEscape($_group->getGroupName()) ?>" <?php if ($_counter == $_groupsCount) : ?>class="validate-one-required-by-name"<?php endif;?>/>
                        <label for="nl_group_<?php echo $_id ?>"><?php echo $_group->getGroupName() ?></label>
                        <?php endif;?>
                    <?php endif;?>
                </div>
           
        <?php endforeach; ?>

<?php endif; ?>


            <div class="input-box">
               <input type="text" name="email" id="newsletter" title="<?php echo $this->__('Sign up for our newsletter') ?>" class="input-text required-entry validate-email" />
            </div>
            <div class="actions">
                <button type="submit" title="<?php echo $this->__('Subscribe') ?>" class="button"><span><span><?php echo $this->__('Subscribe') ?></span></span></button>
            </div>
        </div>
    </form>
    <script type="text/javascript">
    //<![CDATA[
        var newsletterSubscriberFormDetail = new VarienForm('newsletter-validate-detail');
    //]]>
    </script>
</div>

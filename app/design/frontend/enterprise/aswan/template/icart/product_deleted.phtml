$requestUrl = $this->getRequest()->getRequestString();
$refererUrl = $this->getRequest()->getServer('HTTP_REFERER');
?>
<div style="text-align: center;">
Item has been succcessfully removed from cart.
</div>
<script type="text/javascript">
//<![CDATA[
iCart.autoClose(<?php echo (int) Mage::getStoreConfig('mageworx_customers/icart/auto_hide') ?>);
<?php if (strpos($requestUrl, '/removeWishlist/')) { ?>
    // wishlist    
    <?php if (preg_match('~/wishlist/~', $refererUrl)): ?>
        <?php Mage::unregister('wishlist'); Mage::unregister('shared_wishlist'); ?>
        iCart.updateBlock($$('div.my-account', 'div.my-wishlist'), <?php echo Zend_Json::encode($this->getChildHtml('customer.wishlist'))?>);    
    <?php endif ?>
<?php } elseif (strpos($requestUrl, '/removeCompare/') || strpos($requestUrl, '/clearCompare/')) {?>
    // compare
    iCart.replaceBlock($$('div.block-compare', 'div.mini-compare'), <?php echo Zend_Json::encode($this->getChildHtml('catalog.compare.sidebar'))?>);
<?php } else {?>
    // cart
    iCart.updateBlock($$('.cartHeader'), <?php echo Zend_Json::encode($this->getTopLinkCart())?>);
    <?php if (preg_match('~/checkout/cart/~', $this->getRequest()->getServer('HTTP_REFERER'))): ?>
        iCart.updateBlock($$('div.cart'), <?php echo Zend_Json::encode($this->getChildHtml('checkout.cart'))?>);
    <?php endif ?>
    iCart.replaceBlock($$('div.top-cart'), <?php echo Zend_Json::encode($this->getChildHtml('cart_sidebar'))?>);
<?php } ?>
iCart.updateLinks();

//]]>
</script>



<?php if($this->getItems()->getSize()): ?>

<?php $count = count($this->getItemCollection());?>

<?php $limit= (int) Mage::getStoreConfig('inchoo_notes_general/feed/related_count'); ?>

		<h3><?php echo $this->__('We Recommend') ?></h3>
		
			<section id="weRecom">
				<div class="asLook">
					<ul id="mycarousel-weRecom" class="jcarousel-skin-tango">

				<?php 
						$i=0;
						foreach($this->getItems() as $_item):
							if($count <= $limit):	
								if($i <= $count):
				?>
        
            <li>
				<a href="<?php echo $_item->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_item->getName()) ?>">
					<img src="<?php echo $this->helper('catalog/image')->init($_item, 'thumbnail')->resize(70) ?>" width="70" height="70" alt="<?php echo $this->htmlEscape($_item->getName()) ?>" />
				</a>
                   
            </li>
					<?php
						$i++;
						endif;
						endif;
						endforeach 
					?>
        </ul>
		</div>
		</section>
		
		<?php 
		$scroll_items = (int) Mage::getStoreConfig('inchoo_notes_general/feed/related_scroll');
			if($scroll_items <=0 ) {
				$items = 1;
			} else {
				$items = $scroll_items;
			}	
		?>

		<script type="text/javascript">
			jQuery(document).ready(function(){
				jQuery('#mycarousel-weRecom').jcarousel({ horizontal: true, scroll: <?php echo $items; ?> });
			});
		</script>

<?php endif ?>

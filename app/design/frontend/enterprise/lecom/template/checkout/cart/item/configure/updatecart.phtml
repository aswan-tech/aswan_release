<?php $_product = $this->getProduct(); ?>
<?php $buttonTitle = $this->__('Update BAG'); ?>
<?php if ($_product->isSaleable()): ?>
    <div class="add-to-cart itemAddtobeg">
        <?php if (!$_product->isGrouped()): ?>
        <label for="qty" style="display:none;"><?php echo $this->__('Qty:') ?></label>
        <input type="hidden" name="qty" id="qty" maxlength="12" value="<?php echo $this->getProductDefaultQty() * 1 ?>" title="<?php echo $this->__('Qty') ?>" class="input-text qty" />
        <?php endif; ?>
        <button type="button" title="<?php echo $buttonTitle ?>" class="btnsubmit addtobeg" onclick="updateCart();"><span><span><?php echo $buttonTitle ?></span></span></button>
        <?php echo $this->getChildHtml('', true, true) ?>
    </div>
    <div id="ajax-loading" style="display:none;"><img src="<?php echo $this->getSkinUrl('images/ajax-loader.gif'); ?>"></div>
<?php endif; ?>
<script>
	function updateCart() {
		jQuery('#ajax-loading').show();
		var productAddToCartForm = new VarienForm('product_addtocart_form');
		productAddToCartForm.submit(this);
	}
</script>

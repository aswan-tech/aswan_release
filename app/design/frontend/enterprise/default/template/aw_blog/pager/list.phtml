<?php
$currentPage = $this->getCurrentPage();
$pages = $this->getPagesCount();
$route = Mage::helper('blog')->getRoute();
$cat = ($this->getCategoryMode()) ? ('/cat/' . $this->getRequest()->getParam('identifier')) : '';
?>


<?php if ($currentPage > 1): ?>
    <div class="left"><a href="<?php echo $this->getUrl($route . $cat . '/page/' . ($currentPage - 1)); ?>" >< Newer Posts</a></div>
<?php endif; ?>
<?php if ($currentPage < $pages): ?>          
    <div class="right"><a href="<?php echo $this->getUrl($route . $cat . '/page/' . ($currentPage + 1)); ?>" >Older Posts ></a></div>
<?php endif; ?>

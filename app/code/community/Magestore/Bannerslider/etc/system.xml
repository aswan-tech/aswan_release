						<image_width translate="label, comment">
							<label>Image width</label>
							<comment><![CDATA[Unit is px]]></comment>
							<frontend_type>text</frontend_type>
							<sort_order>4</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</image_width>
						<image_height translate="label, comment">
							<label>Image height</label>
							<comment><![CDATA[Unit is px]]></comment>
							<frontend_type>text</frontend_type>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</image_height>
					</fields>
				</settings>
			</groups>
		</bannerslider>
		<bannerlist translate="label" module="bannerslider">
			<label>Favorite Panel Configuration</label>
			<tab>magestore</tab>
			<frontend_type>text</frontend_type>
			<sort_order>1000</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<fav_settings translate="label">
				<label>Favorite Panel Slider Settings</label>
				<frontend_type>text</frontend_type>
				<sort_order>1</sort_order>
				<show_in_default>1</show_in_default>
				<show_in_website>1</show_in_website>
				<show_in_store>1</show_in_store>
					<fields>					
						<display translate="label, comment">
							<label>Show Favorite Panel on Site.</label>	
							<comment><![CDATA[Turns Off/On the display of favorite panel on frontend.]]></comment>							
							<frontend_type>Select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>0</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</display>
						<num_to_display translate="label">
                            <label>Number of Most veiwed to be displayed</label>
                            <comment>Used to set the number of most veiwed to be displayed in Favorite</comment>
                            <frontend_type>text</frontend_type>
							<validate>required-entry validate-not-negative-number</validate>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </num_to_display>
						<display_order translate="label">
                            <label>First to be displayed.</label>
                            <comment>Used to set which products will be displayed first [Most veiwed OR Favorite]</comment>
                            <frontend_type>select</frontend_type>
							<source_model>common/favoritedisplay</source_model>
							<validate>required-entry</validate>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </display_order>
					</fields>
				</fav_settings>
			</groups>
		</bannerlist>
	</sections>
</config>
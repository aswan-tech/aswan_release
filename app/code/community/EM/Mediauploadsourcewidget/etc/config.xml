<config>
    <modules>
        <EM_Mediauploadsourcewidget>
            <version>0.0.1</version>
        </EM_Mediauploadsourcewidget>
    </modules>
    <global>
        <helpers>
            <mediauploadsourcewidget>
                <class>EM_Mediauploadsourcewidget_Helper</class>
            </mediauploadsourcewidget>
        </helpers>
        <blocks>
             <mediauploadsourcewidget>
                <class>EM_Mediauploadsourcewidget_Block</class>
             </mediauploadsourcewidget>
        </blocks>
<!--        <models>
             <mediauploadwidget>
                <class>EM_MediaUploadWidget_Model</class>
             </mediauploadwidget>
        </models>
-->
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Mage_Cms>
                    <files>
                        <default>Mage_Cms.csv</default>
                    </files>
                </Mage_Cms>
            </modules>
        </translate>
        <layout>
            <updates>
                <cms>
                    <file>cms.xml</file>
                </cms>
            </updates>
        </layout>
        <cms>
            <browser>
                <dirs>
                    <exclude>
                        <catalog_dir regexp="0">catalog</catalog_dir><!-- use regexp="0" or "1" to override -->
                        <downloadable>downloadable</downloadable>
                        <flex_dir>flex</flex_dir>
                        <import>import</import>
                        <tmp>tmp</tmp>
                        <js>js</js>
                        <css>css</css>
                    </exclude>
                    <include></include>
                </dirs>
                <extensions>
                    <allowed>
                        <jpg>1</jpg>
                        <jpeg>1</jpeg>
                        <png>1</png>
                        <gif>1</gif>
                    </allowed>
                    <image_allowed>
                        <jpg>1</jpg>
                        <jpeg>1</jpeg>
                        <png>1</png>
                        <gif>1</gif>
                    </image_allowed>
                    <media_allowed>
                        <flv>1</flv>
                        <swf>1</swf>
                        <avi>1</avi>
                        <mov>1</mov>
                        <rm>1</rm>
                        <wmv>1</wmv>
                        <mp3>1</mp3>
                    </media_allowed>
                </extensions>
                <window_width>1000</window_width>
                <window_height>600</window_height>
                <resize_width>100</resize_width>
                <resize_height>75</resize_height>
            </browser>
        </cms>
    </adminhtml>
    <admin>
        <routers>
            <mediauploadsourcewidget>
                <use>admin</use>
                <args>
                    <module>EM_Mediauploadsourcewidget</module>
                    <frontName>mediauploadsourcewidget</frontName>
                </args>
            </mediauploadsourcewidget>
        </routers>
    </admin>

	<frontend>
		<layout>
			<updates>
				<mediauploadsourcewidget>
					<file>em_mediawidget.xml</file>
				</mediauploadsourcewidget>
			</updates>
		</layout>
	</frontend>
    
</config>

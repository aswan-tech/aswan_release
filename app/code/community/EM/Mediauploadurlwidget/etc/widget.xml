<widgets>
    <mediauploadurlwidget_upload type="mediauploadurlwidget/upload" translate="name description" module="mediauploadurlwidget">
        <name>Upload media by url</name>
        <description>Support type: flv, swf, wmv, avi, embed code(Youtube, Dailymotion), mp3</description>
        <parameters>
            <media>
                <label>Media</label>
                <visible>1</visible>
                <required>1</required>
                <type>text</type>
            </media>
            <width>
                <label>Width</label>
                <visible>1</visible>
                <required>0</required>
                <type>text</type>
            </width>
            <height>
                <label>Height</label>
                <visible>1</visible>
                <required>0</required>
                <type>text</type>
            </height>
            <id>
                <label>id</label>
                <visible>1</visible>
                <required>0</required>
                <type>text</type>
            </id>
            <class>
                <label>class</label>
                <visible>1</visible>
                <required>0</required>
                <type>text</type>
            </class>
            <attrs>
                <label>element attrs</label>
                <visible>1</visible>
                <required>0</required>
                <type>text</type>
            </attrs>
            <flashvars>
                <label>flashvars</label>
                <visible>1</visible>
                <required>0</required>
                <type>text</type>
            </flashvars>
            <wmode>
                <label>wmode</label>
                <visible>1</visible>
                <required>0</required>
                <type>select</type>
                <values>
                    <transparent translate="label">
                        <value>transparent</value>
                        <label>transparent</label>
                    </transparent>
                    <window translate="label">
                        <value>window</value>
                        <label>window</label>
                    </window>
                    <opaque translate="label">
                        <value>opaque</value>
                        <label>opaque</label>
                    </opaque>
                </values>
            </wmode>
        </parameters>
    </mediauploadurlwidget_upload>
</widgets>

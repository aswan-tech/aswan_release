<?xml version="1.0"?>
<config>
    <modules>
        <Jextn_Testimonials>
            <version>0.2.0</version>
        </Jextn_Testimonials>
    </modules>
    <frontend>
        <routers>
            <testimonials>
                <use>standard</use>
                <args>
                    <module>Jextn_Testimonials</module>
                    <frontName>testimonials</frontName>
                </args>
            </testimonials>
        </routers>
        <layout>
            <updates>
                <testimonials>
                    <file>testimonials.xml</file>
                </testimonials>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<testimonials>
				<use>admin</use>
				<args>
					<module>Jextn_Testimonials</module>
					<frontName>testimonials</frontName>
				</args>
			</testimonials>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<cms>
				<children>
					<testimonials module="testimonials">
						<title>Testimonials</title>
						<sort_order>71</sort_order>        
						<action>testimonials/adminhtml_testimonials</action>						
					</testimonials>
				</children>
			</cms>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Jextn_Testimonials  translate="title">
							<title>Testimonials Module</title>
							<sort_order>10</sort_order>
						</Jextn_Testimonials>
						<cms>
							<children>
								<testimonials module="testimonials">
									<title>Testimonials</title>															
								</testimonials>
							</children>
						</cms>						
						<system>
							<children>
								<config>
									<children>
										<testimonials>
											<title>Testimonials</title>
										</testimonials>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<testimonials>
					<file>testimonials.xml</file>
				</testimonials>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <testimonials>
                <class>Jextn_Testimonials_Model</class>
                <resourceModel>testimonials_mysql4</resourceModel>
            </testimonials>
            <testimonials_mysql4>
                <class>Jextn_Testimonials_Model_Mysql4</class>
                <entities>
                    <testimonials>
                        <table>testimonials</table>
                    </testimonials>
                </entities>
            </testimonials_mysql4>
        </models>
        <resources>
            <testimonials_setup>
                <setup>
                    <module>Jextn_Testimonials</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </testimonials_setup>
            <testimonials_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </testimonials_write>
            <testimonials_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </testimonials_read>
        </resources>
        <blocks>
            <testimonials>
                <class>Jextn_Testimonials_Block</class>
            </testimonials>
        </blocks>
        <helpers>
            <testimonials>
                <class>Jextn_Testimonials_Helper</class>
            </testimonials>
        </helpers>
    </global>
</config>
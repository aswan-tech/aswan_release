<?xml version="1.0"?>
<config>
    <!--
    /**
     * @category     Inchoo
     * @package     Inchoo Seller Products
     * @author        Domagoj Potkoc, Inchoo Team <web@inchoo.net>
     * @modified    Mladen Lotar <mladen.lotar@surgeworks.com>, Vedran Subotic <vedran.subotic@surgeworks.com>
     */
    -->
    <tabs>
        <inchoo module="inchoo_notes">
            <label>Manage catalog Tooltip and Product catalog Settings</label>
            <sort_order>110</sort_order>
        </inchoo>
    </tabs>
    <sections>
        <sellerproducts translate="label" module="sellerproducts">
            <class>separator-top</class>
            <label>BestSeller Products</label>
            <tab>inchoo</tab>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                       	<product_sort_by_cat translate="label">
                            <label>Sort By in Main Block for Department Page</label>
                            <comment>Main block is used in content section of the site</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>sellerproducts/system_config_source_sort</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </product_sort_by_cat>

                        <number_of_items_cat translate="label comment">
                            <label>Number Of Items in Main Block for Department Page</label>
                            <comment>How many BestSeller products will be showed in main block?</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
							<validate>required-entry</validate>
                        </number_of_items_cat>
						
						<number_of_items_slide translate="label comment">
                            <label>Number Of Items to slide in Main Block for Department Page</label>
                            <comment>How many BestSeller products will slide at a time in main block?</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>							
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
							<validate>required-entry</validate>
                        </number_of_items_slide>

                       <!-- <number_of_items_per_row translate="label comment">
                            <label>Number Of Items per row in Main Block</label>
                            <comment>How many BestSeller products will be showed per row?</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </number_of_items_per_row> -->

                    </fields>
                </general>
            </groups>
        </sellerproducts>
    </sections>
</config>

                        </notify> -->
						<recent_count translate="label">
                            <label>Recently Viewed Number of Products to Display:</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
							<validate>required-entry</validate>
                        </recent_count>
						
						<recent_scroll translate="label">
                            <label>Recently Viewed Number of Products to Scroll:</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
							<validate>required-entry</validate>
                        </recent_scroll>
						
						<related_count translate="label">
                            <label>We Recommend Number of Products to Display:</label>

                            <show_in_store>0</show_in_store>
							<validate>required-entry</validate>
                        </related_scroll>
                    </fields>
                </feed>
            </groups>
        </inchoo_notes_general>
        <inchoo_general translate="label" module="inchoo_notes">
            <label>Manage Catalog Tooltip</label>
            <tab>inchoo</tab>
            <frontend_type>text</frontend_type>
            <sort_order>99999</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <extensions translate="label" module="inchoo_notes">
                    <label>Catalog Tooltip</label>					
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
					
                    <fields>
                        <premium_tooltip translate="label">
                            <label>Premium Packaging Tooltip:</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
							<comment><![CDATA[Tooltip appear on premium packaging on product detail Page.]]></comment>
							<validate>required-entry</validate>
                        </premium_tooltip>
                    </fields>
                </extensions>
            </groups>
        </inchoo_general>

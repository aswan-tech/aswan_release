<config>
    <sections>
        <mageworx_customers translate="label" module="mageworx">
            <label>Customers</label>
            <tab>mageworx</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <icart translate="label" module="icart">
                    <label>Instant Cart</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <auto_hide translate="label">
                            <label>Auto Hide Instant Cart</label>
                            <comment>seconds or 0 to disable auto hide</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </auto_hide>
                        <show_products_block translate="label">
                            <label>Show Products Block</label>
                            <frontend_type>select</frontend_type>
                            <source_model>icart/system_config_source_products_block</source_model>                            
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_products_block>
                    </fields>
                </icart>
            </groups>
        </mageworx_customers>
    </sections>
</config> 
<?xml version="1.0"?>
<config>
    <modules>
        <FCM_Inventory>
            <version>0.1.0</version>
        </FCM_Inventory>
    </modules>
    <frontend>
        <routers>
            <inventory>
                <use>standard</use>
                <args>
                    <module>FCM_Inventory</module>
                    <frontName>inventory</frontName>
                </args>
            </inventory>
        </routers>
        <layout>
            <updates>
                <inventory>
                    <file>inventory.xml</file>
                </inventory>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<inventory>
				<use>admin</use>
				<args>
					<module>FCM_Inventory</module>
					<frontName>inventory</frontName>
				</args>
			</inventory>
        </routers>
    </admin>
    <adminhtml>
		<acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <inventory>
                                            <title>Report Import Module Section</title>
                                        </inventory>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
		<layout>
			<updates>
				<inventory>
					<file>inventory.xml</file>
				</inventory>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <inventory>
                <class>FCM_Inventory_Model</class>
                <resourceModel>inventory_mysql4</resourceModel>
            </inventory>
            <inventory_mysql4>
                <class>FCM_Inventory_Model_Mysql4</class>
                <entities>
                    <inventory>
                        <table>inventory</table>
                    </inventory>
                </entities>
            </inventory_mysql4>
        </models>
        <resources>
            <inventory_setup>
                <setup>
                    <module>FCM_Inventory</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </inventory_setup>
            <inventory_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </inventory_write>
            <inventory_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </inventory_read>
        </resources>
        <blocks>
            <inventory>
                <class>FCM_Inventory_Block</class>
            </inventory>
        </blocks>
        <helpers>
            <inventory>
                <class>FCM_Inventory_Helper</class>
            </inventory>
        </helpers>
    </global>
	<crontab>
		<jobs>
			<fcm_update_stockqty>
				<schedule><cron_expr>*/30 * * * *</cron_expr></schedule>
				<run><model>inventory/observer::updateStockQty</model></run>
			</fcm_update_stockqty>
		</jobs>
	</crontab>
	
	<default>
		<inventory>
			<directories>
				<custom_csv_directory_inbound>/home/lecomotf/inbound/inventory/</custom_csv_directory_inbound>
				<custom_csv_directory>var/import/lecom/inbound/inventory/</custom_csv_directory>	
				<custom_csv_archive_directory>var/import/lecom/inbound/inventory_arcv/</custom_csv_archive_directory>	
				<custom_csv_failure_directory>var/import/lecom/inbound/inventory_failure/</custom_csv_failure_directory>		
			</directories>
			<directories_priceupdate>
				<custom_csv_directory_inbound>/home/lecomotf/inbound/priceupdate/</custom_csv_directory_inbound>
				<custom_csv_directory>var/import/lecom/inbound/priceupdate/</custom_csv_directory>	
				<custom_csv_archive_directory>var/import/lecom/inbound/priceupdate_arcv/</custom_csv_archive_directory>	
				<custom_csv_failure_directory>var/import/lecom/inbound/priceupdate_failure/</custom_csv_failure_directory>		
			</directories_priceupdate>
			<notificationemail>
				<notification_email_subject>Product import error!!!</notification_email_subject>
				<notification_email>ajesh.prakash@hcl.com</notification_email>
				<notification_ccemail>ajesh.prakash@hcl.com</notification_ccemail>															
			</notificationemail>
		</inventory>
	</default>
</config>
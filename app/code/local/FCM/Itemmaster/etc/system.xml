<?xml version="1.0"?>
<config>
	<tabs>
	   <fcmfulfillment translate="label" module="itemmaster">
		   <label>FCM Fulfillment</label>
		   <sort_order>280</sort_order>
	  </fcmfulfillment>
   </tabs>
     <sections>
	       <itemmaster translate="label" module="itemmaster">
				<label>Item Master Cron Setting</label>
				<tab>fcmfulfillment</tab>
				<frontend_type>text</frontend_type>
				<sort_order>1000</sort_order>
				<show_in_default>1</show_in_default>
				<show_in_website>1</show_in_website>
				<show_in_store>1</show_in_store>
				<groups>
				 <directories translate="label">
                    <label>Directories</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
						 <custom_csv_directory_inbound translate="label">
                            <label>Inbound File Directory</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Use {{base_path}} to get the base directory path.</comment>
                        </custom_csv_directory_inbound>
                        <custom_csv_directory translate="label">
                            <label>File Directory</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Use {{base_path}} to get the base directory path.</comment>
                        </custom_csv_directory>
						<custom_csv_archive_directory translate="label">
                            <label>Archive Directory</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Use {{base_path}} to get the base directory path.</comment>
                        </custom_csv_archive_directory>
						<custom_csv_failure_directory translate="label">
                            <label>Archive Failure Directory</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Use {{base_path}} to get the base directory path.</comment>
                        </custom_csv_failure_directory>
                    </fields>
                </directories>

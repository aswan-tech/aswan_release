				<run translate="label">
                    <label>Manual Import</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>40</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
						  <itemmaster_now translate="label">           
							 <label>Import Item Master</label>            
							 <frontend_type>button</frontend_type>
							 <frontend_model>FCM_Itemmaster_Block_Adminhtml_System_Config_Form_Field_Button</frontend_model>					 
							 <sort_order>18</sort_order>            
							 <show_in_default>1</show_in_default>           
							 <show_in_website>1</show_in_website>            
							 <show_in_store>1</show_in_store>           
						 </itemmaster_now>
                    </fields>
                </run>
				<notificationemail translate="label">
                    <label>Failure Notification Email</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
					<notification_email_subject translate="label">
                            <label>Notification Email Subject</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </notification_email_subject>
                        <notification_email translate="label">
                            <label>Notification Email</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>e.g. ajesh.prakash@hcl.com</comment>
                        </notification_email>
						<notification_ccemail translate="label">
                            <label>Notification CC Email</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>e.g. ajesh.prakash@hcl.com</comment>
                        </notification_ccemail>
                    </fields>
                </notificationemail>
            </groups>
        </itemmaster>
    </sections>

<config>
    <modules>
        <FCM_Itemmaster>
            <version>0.1.0</version>
        </FCM_Itemmaster>
    </modules>
    <frontend>
        <routers>
            <itemmaster>
                <use>standard</use>
                <args>
                    <module>FCM_Itemmaster</module>
                    <frontName>itemmaster</frontName>
                </args>
            </itemmaster>
        </routers>
        <layout>
            <updates>
                <itemmaster>
                    <file>itemmaster.xml</file>
                </itemmaster>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<itemmaster>
				<use>admin</use>
				<args>
					<module>FCM_Itemmaster</module>
					<frontName>itemmaster</frontName>
				</args>
			</itemmaster>
        </routers>
    </admin>

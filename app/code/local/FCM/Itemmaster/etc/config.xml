	<default>
		<itemmaster>
			<directories>
				<csv_directory>output/working/</csv_directory>
			</directories>
			<ftp>
				<ftp_host>ftp.lecom.in</ftp_host>
				<ftp_username></ftp_username>
				<ftp_password></ftp_password>
				<ftp_directory>/Retail/Retail_online/Dev/POS/IN/Transfer</ftp_directory>
			</ftp>
		</itemmaster>
	</default>	
    <global>
        <models>
            <itemmaster>
                <class>FCM_Itemmaster_Model</class>
                <resourceModel>itemmaster_mysql4</resourceModel>
            </itemmaster>
            <itemmaster_mysql4>
                <class>FCM_Itemmaster_Model_Mysql4</class>
                <entities>
                    <itemmaster>
                        <table>itemmaster</table>
                    </itemmaster>
                </entities>
            </itemmaster_mysql4>
        </models>
        <resources>
            <itemmaster_setup>
                <setup>
                    <module>FCM_Itemmaster</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </itemmaster_setup>
            <itemmaster_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </itemmaster_write>
            <itemmaster_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </itemmaster_read>
        </resources>
        <blocks>
            <itemmaster>
                <class>FCM_Itemmaster_Block</class>
            </itemmaster>
        </blocks>
        <helpers>
            <itemmaster>
                <class>FCM_Itemmaster_Helper</class>
            </itemmaster>
        </helpers>
    </global>
	<default>
		<itemmaster>
			<directories>
				<custom_csv_directory_inbound>/home/lecomotf/inbound/itemmaster/</custom_csv_directory_inbound>
